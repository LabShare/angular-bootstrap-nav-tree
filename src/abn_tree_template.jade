
ul.nav.nav-list.nav-pills.nav-stacked.abn-tree

  li.abn-tree-row(
    ng-repeat='row in tree_rows | filter:{visible:true} track by row.branch.uid'
    ng-animate="'abn-tree-animate'"
    ng-class="'level-' + {{ row.level }} + (row.branch.selected ? ' active':'') + ' ' +row.classes.join(' ')"
    )

    a(ng-click="user_clicks_branch(row.branch)")

      i.indented.tree-icon(
        ng-class="row.tree_icon"
        ng-click="row.branch.expanded = !row.branch.expanded"
        ) 

      span.indented.tree-label {{ row.label }}
      span(ng-repeat="button in buttons")
        span.pull-right(ng-show="row.branch.selected && !row.branch[button.hideKey]")
          i.fa.branch-btn(
            ng-click="button.onClick()"
            ng-class="button.icon"
            aria-hidden="true"
            )
            md-tooltip(ng-show="button.tooltip") {{ button.tooltip }}
